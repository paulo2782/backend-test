<form action="#" method="POST" id="register_special">
	
	<div class="container">
		<div class="card text-white bg-primary">
	  <div class="card-header">Formulário Inscrição por Indicação</div>      
	</div>
	    
	  <div class="clearfix">&nbsp</div>
		<input type="hidden" class="form-control" name="special_link"  id="special_link" value="{{special_link}}">
		<div class="row">
			<div class="col-lg-12">
				Nome
				<input type="text" class="form-control" name="name" id="name" required="true">
			</div>
			<div class="col-lg-12">
				E-mail
				<input type="text" class="form-control" name="email" id="email" required="true">
			</div>
			<div class="col-lg-12">
				Telefone
				<input type="text" class="form-control" name="phone" id="phone" required="true">
			</div>
		</div>
	
	<div class="clearfix">&nbsp</div>

		<div class="row">
			  <div class="col-lg-4">
				<input type="submit" value="CADASTRAR" class="btn btn-success form-control">
		  </div>
      <div class="col-lg-4">
        <a href="/"> 
        	<input type="button" value="INICIO" class="btn btn-danger form-control">
        </a>
      </div>

    </div>
	</div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="../../js/api.js"></script>
</form>
